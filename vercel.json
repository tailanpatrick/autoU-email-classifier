{
	"version": 2,
	"builds": [
		{ "src": "frontend/**/*", "use": "@vercel/static" },
		{
			"src": "backend/api/process_email.py",
			"use": "@vercel/python",
			"config": { "runtime": "python3.11" }
		}
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "backend/api/process_email.py" },
		{ "src": "/(.*)", "dest": "/frontend/$1" }
	]
}
